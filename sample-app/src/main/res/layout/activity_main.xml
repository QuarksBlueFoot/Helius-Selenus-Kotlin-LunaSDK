<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helius Luna SDK Sample"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Key: Configured in Code"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnFetchAssets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Assets (DAS)" />

        <Button
            android:id="@+id/btnValidatorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Validator Info (RPC)" />

        <Button
            android:id="@+id/btnSenderRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulate Sender Transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:fontFamily="monospace"
            android:text="Ready..." />

    </LinearLayout>
</ScrollView>
